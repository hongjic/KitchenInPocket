<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_register"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.greatsky.kitcheninpocket.RegisterActivity">

    <TextView
        android:text="@string/username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="26dp"
        android:layout_marginTop="22dp"
        android:id="@+id/register_username_text" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:layout_below="@+id/register_username_text"
        android:layout_alignStart="@+id/register_pass_text"
        android:layout_marginStart="22dp"
        android:layout_marginTop="12dp"
        android:id="@+id/register_username" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:layout_below="@+id/register_pass_text"
        android:layout_alignStart="@+id/register_username"
        android:layout_marginTop="18dp"
        android:id="@+id/register_pass" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:layout_centerVertical="true"
        android:layout_alignStart="@+id/register_pass"
        android:id="@+id/register_repass" />

    <Button
        android:text="@string/cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/register_repass_text"
        android:layout_marginBottom="78dp"
        android:id="@+id/register_cancel" />

    <Button
        android:text="@string/register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/register_cancel"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="49dp"
        android:id="@+id/register_register" />

    <TextView
        android:text="@string/re_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:id="@+id/register_repass_text"
        android:layout_below="@+id/register_pass"
        android:layout_alignStart="@+id/register_username_text" />

    <TextView
        android:text="@string/password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/register_pass_text"
        android:layout_below="@+id/register_username"
        android:layout_alignStart="@+id/register_username_text" />
</RelativeLayout>
