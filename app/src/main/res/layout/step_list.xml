<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/step_num"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:textStyle="normal|bold"
        android:textSize="24sp"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="20dp"/>


    <ImageButton
        android:id="@+id/step_image"
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="180dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:src="@drawable/step_picture"
        android:scaleType="fitXY"
        android:background="@null"
        android:onClick="addStep1Picture"/>

    <EditText
        android:id="@+id/step_description"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:hint="Add some discriptions"
        android:textAlignment="center"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="#fff"
        />

    <Button
        android:id="@+id/add_more_step"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Add more steps"
        android:onClick="addSteps"
        android:background="@color/light_action_bar"
        android:textColor="#fff"/>

</LinearLayout>