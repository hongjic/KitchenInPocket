<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:id="@+id/recipe_name"
        android:gravity="center_horizontal"
        android:text="Recipe Name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:textSize="22sp"
        android:layout_marginTop="15dp"
         />

    <ImageView
        android:id="@+id/cover_picture"
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="180dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:src="@drawable/first"
        android:scaleType="fitXY"
        android:background="@null"
        android:layout_below="@+id/recipe_name"
        />

    <TextView
        android:id="@+id/ingredient_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ingredients:"
        android:textSize="18sp"
        android:textStyle="normal|bold"
        android:layout_below="@+id/cover_picture"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:textColor="@color/light_action_bar"
        />

    <TextView
        android:id="@+id/ingredient_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="1.xxx\n2.xxx\n3.xxx\n"
        android:textSize="15sp"
        android:layout_below="@+id/ingredient_title"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="20dp"
        />

    <TextView
        android:id="@+id/step1_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Step 1:"
        android:textSize="18sp"
        android:layout_below="@+id/ingredient_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:textStyle="normal|bold"
        android:textColor="@color/light_action_bar"
        />

    <ImageView
        android:id="@+id/step1_picture"
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="180dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:src="@drawable/first"
        android:scaleType="fitXY"
        android:background="@null"
        android:layout_below="@+id/step1_title"
        />

    <TextView
        android:id="@+id/step1_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="This is the content of Step 1\nand the picture above is the picture of step 1"
        android:layout_below="@+id/step1_picture"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="20dp"
        />

    <TextView
        android:id="@+id/step2_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Step 2:"
        android:textSize="18sp"
        android:textStyle="normal|bold"
        android:layout_below="@+id/step1_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:textColor="@color/light_action_bar"
        />

    <ImageView
        android:id="@+id/step2_picture"
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="180dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:src="@drawable/second"
        android:scaleType="fitXY"
        android:background="@null"
        android:layout_below="@+id/step2_title"
        />

    <TextView
        android:id="@+id/step2_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="This is the content of Step 2\nand the picture above is the picture of step 2"
        android:layout_below="@+id/step2_picture"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="20dp"
        />

    <TextView
        android:id="@+id/step3_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Step 3:"
        android:textSize="18sp"
        android:textStyle="normal|bold"
        android:layout_below="@+id/step2_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:textColor="@color/light_action_bar"
        />

    <ImageView
        android:id="@+id/step3_picture"
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="180dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:src="@drawable/third"
        android:scaleType="fitXY"
        android:background="@null"
        android:layout_below="@+id/step3_title"
        />

    <TextView
        android:id="@+id/step3_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="This is the content of Step 3\nand the picture above is the picture of step 3"
        android:layout_below="@+id/step3_picture"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="20dp"
        />

    <ImageButton
        android:id="@+id/author_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_menu_camera"
        android:layout_below="@+id/step3_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"/>

    <TextView
        android:id="@+id/author_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/author_image"
        android:text="author_username"
        android:layout_marginLeft="20dp"/>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/like_icon"
        android:layout_width="77dp"
        android:layout_height="67dp"
        android:layout_margin="@dimen/fab_margin"
        app:srcCompat="@drawable/heart2"
        app:backgroundTint="@android:color/background_light"
        app:rippleColor="@android:color/transparent"
        app:elevation="0dp"
        android:layout_below="@+id/step3_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"/>






</RelativeLayout>
</ScrollView>