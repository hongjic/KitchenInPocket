<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent" android:layout_height="match_parent">

        <TextView
            android:id="@+id/recipe_name"
            android:gravity="left"
            android:text="Recipe Name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:textSize="25dp"
            android:layout_marginTop="15dp"
            android:textStyle="bold"/>

        <ImageView
            android:id="@+id/cover_picture"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:src="@drawable/first"
            android:alpha="1"
            android:scaleType="fitXY"
            android:background="@null"
            android:layout_below="@+id/recipe_name"
            />

        <TextView
            android:id="@+id/ingredient_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ingredients:"
            android:textSize="22dp"
            android:textStyle="normal|bold"
            android:layout_below="@+id/cover_picture"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:textColor="@color/light_action_bar"
            />

        <TextView
            android:id="@+id/ingredient_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="1.xxx\n2.xxx\n3.xxx\n"
            android:textSize="18dp"
            android:layout_below="@+id/ingredient_title"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="20dp"
            />

        <TextView
            android:id="@+id/step_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Steps:"
            android:textColor="@color/light_action_bar"
            android:textStyle="bold"
            android:layout_below="@id/ingredient_content"
            android:layout_marginLeft="20dp"
            android:textSize="22dp"/>

        <ListView
            android:id="@+id/step_listview"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:text="Step 1:"
            android:textSize="18sp"
            android:layout_below="@+id/step_title"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="20dp"
            android:textStyle="normal|bold"
            android:textColor="@color/light_action_bar"
            />


        <TextView
            android:id="@+id/author_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="author_username"
            android:layout_marginLeft="20dp"
            android:textSize="20dp"
            android:textColor="@color/red_orange"
            android:layout_above="@+id/cover_picture"
            android:layout_toEndOf="@+id/recipe_name" />


    </RelativeLayout>
</ScrollView>